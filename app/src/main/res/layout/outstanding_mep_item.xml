<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dimen_250"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/dimen_8"
    app:cardCornerRadius="@dimen/dimen_12"
    app:cardElevation="@dimen/dimen_4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivMep"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_134"
            android:scaleType="fitXY"
            android:src="@drawable/ic_mep" />

        <TextView
            android:id="@+id/tvMepName"
            style="@style/StyleGreenText16SemiBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_10"
            android:layout_marginEnd="@dimen/dimen_8"
            tools:text="Gói khám sức khỏe tổng quát" />

        <TextView
            android:id="@+id/tvMepClinic"
            style="@style/StyleGreenLight10Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineHeight="@dimen/dimen_14"
            android:paddingStart="@dimen/dimen_10"
            tools:text="Phòng khám đa khoa Hoàng Long" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8"
            android:gravity="start"
            android:paddingStart="@dimen/dimen_10">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="@dimen/dimen_20"
                android:layout_height="@dimen/dimen_12"
                android:layout_marginStart="@dimen/dimen_2"
                android:src="@drawable/ic_watch" />

            <TextView
                android:layout_gravity="center"
                android:id="@+id/tvMepWatchNumber"
                style="@style/StyleMediMain12Regular"
                android:layout_width="wrap_content"
                android:maxWidth="@dimen/dimen_30"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_2"
                android:layout_marginTop="@dimen/dimen_2"
                tools:text="100 " />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_16">

                <ImageView
                    android:layout_width="@dimen/dimen_16"
                    android:layout_height="@dimen/dimen_18"
                    android:layout_gravity="center"
                    android:paddingTop="@dimen/dimen_4"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_cart" />

                <TextView
                    android:id="@+id/tvMepCartNumber"
                    style="@style/StyleMediMain12Regular"
                    android:layout_width="wrap_content"
                    android:maxWidth="@dimen/dimen_30"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_2"
                    android:layout_marginTop="@dimen/dimen_4"
                    tools:text="29 " />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_16">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="@dimen/dimen_4"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_gender" />

                <TextView
                    android:id="@+id/tvMepGender"
                    style="@style/StyleMediMain12Regular"
                    android:maxWidth="@dimen/dimen_100"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_4"
                    android:layout_marginTop="@dimen/dimen_4"
                    tools:text="Nam/Nữ " />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_8">

            <TextView
                android:id="@+id/tvMepCurrentPrice"
                style="@style/StyleRed18SemiBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                tools:text="1.000.000" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_6"
                android:layout_marginTop="@dimen/dimen_4"
                android:layout_marginEnd="@dimen/dimen_20"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvMepPreviousPrice"
                    style="@style/StyleDivider14SemiBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="2.000.000" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1"
                    android:layout_alignEnd="@id/tvMepPreviousPrice"
                    android:layout_centerVertical="true"
                    android:background="@color/divider" />

            </RelativeLayout>

            <com.thomnt.medi365.widget.MissionView
                android:id="@+id/mvMepBooking"
                android:layout_width="@dimen/dimen_50"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_8"
                android:layout_marginBottom="@dimen/dimen_10"
                app:mv_background="@drawable/shape_rectangle_white_bg_color_booking_stroke_corner_12"
                app:mv_icon="@drawable/ic_booking"
                app:mv_show_text="false" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
