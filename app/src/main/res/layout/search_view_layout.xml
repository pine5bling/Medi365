<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/dimen_14"
        android:layout_marginBottom="@dimen/dimen_16"
        android:background="@drawable/shape_white_bg_corner_16"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_12"
            android:src="@drawable/ic_search_black" />

        <EditText
            android:background="@android:color/transparent"
            android:id="@+id/edtSearch"
            android:layout_marginVertical="@dimen/dimen_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/svn_semi_bold"
            android:hint="@string/_search"
            android:textColorHint="@color/neutral_7"
            android:textSize="@dimen/dimen_text_size_16" />

    </LinearLayout>

</LinearLayout>
